
@model List<Chef>
@{
    int count = 0;
}

<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Chefs</h4>
            <p class="card-description">
                <a asp-action="create" asp-controller="chef" class="btn btn-success">Create Chef</a>
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Settings</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Chef chefs in Model)
                        {
                            count++;
                            <tr>
                            <td>@count</td>
                            <td>@chefs.Photo</td>
                            <td>@chefs.Name</td>
                            <td>
                                <a asp-action="update" asp-controller="chef" asp-route-id="@chefs.Id" class="btn btn-warning btn-info">Update</a>
                                <a asp-action="details" asp-controller="chef" asp-route-id="@chefs.Id" class="btn btn-success btn-info">Details</a>
                                <a asp-action="delete" asp-controller="chef" asp-route-id="@chefs.Id" class="btn btn-danger btn-info">Delete</a>
                            </td>
                        </tr>
                        }
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
