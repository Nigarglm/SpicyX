@using SpicyX.Areas.ViewModels.Chef;
@model CreateChefVM

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Update Chef</h4>

                        <form class="forms-sample" enctype="multipart/form-data" method="post">
                            <div class="form-group">
                                <label asp-for="Photo">Choose new Image</label>
                                <input asp-for="Photo" class="form-control" placeholder="Image">
                                <span class="text-danger" asp-validation-for="Photo"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name">Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Name">
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Position">Position</label>
                                <input asp-for="Position" class="form-control" placeholder="Position">
                                <span class="text-danger" asp-validation-for="Position"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FbUrl">Facebook Url</label>
                                <input asp-for="FbUrl" class="form-control" placeholder="FbUrl">
                                <span class="text-danger" asp-validation-for="FbUrl"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TwitterUrl">Twitter Url</label>
                                <input asp-for="TwitterUrl" class="form-control" placeholder="TwitterUrl">
                                <span class="text-danger" asp-validation-for="TwitterUrl"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="MailUrl">Mail Url </label>
                                <input asp-for="MailUrl" class="form-control" placeholder="MailUrl">
                                <span class="text-danger" asp-validation-for="MailUrl"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="LinkedinUrl">Linkedin Url</label>
                                <input asp-for="LinkedinUrl" class="form-control" placeholder="LinkedinUrl">
                                <span class="text-danger" asp-validation-for="LinkedinUrl"></span>
                            </div>

                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <a asp-action="index" asp-controller="chef" class="btn btn-light">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>